<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2FAFAFA"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="team.Voyager.openinwhatsapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:background="#555555"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="Team Voyager"
            android:textSize="20dp"
            android:textColor="#F2ECE4E4"
            />
        <TextView
            android:id="@+id/minimize"
            android:text="            "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rectangle"
            />

        <TextView
            android:id="@+id/full_screen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="     "
            android:background="@drawable/square"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/quit_app"
            android:paddingHorizontal="10dp"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="X"
            android:background="#D63929"
            android:gravity="center"
            android:textColor="#D6CDCD"
            android:textSize="20dp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_alignParentTop="true"

        android:text="Open WhatsApp Chat\nwithout saving them\nin Contacts"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="30dp"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_above="@+id/editText"
        android:autofillHints="91"
        android:gravity="bottom"
        android:layout_gravity="left"
        android:hint="Country Code (Optional)"
        android:layout_marginLeft="24dp"
        android:inputType="phone"
        android:textColor="#555555"
        android:textSize="18dp"
        />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:hint="Enter Phone number"
        android:inputType="phone"
        android:gravity="center_vertical"
        android:textColor="#555555"
        android:textSize="17dp"
        />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/background_with_angle"
        android:elevation="30dp"
        android:text="Open in WhatsApp"
        android:gravity="center"
        android:textColor="#C0C0C0"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
