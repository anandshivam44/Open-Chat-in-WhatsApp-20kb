<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="60dp"
    android:background="#fff"
    tools:context="team.Voyager.openinwhatsapp.MainActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/quit_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="13dp"
        android:text="X"
        android:textColor="#000000"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="60dp"
        android:text="Open phone number in WhatsApp\nwithout saving them"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36dp" />

    <EditText
        android:layout_above="@+id/editText"
        android:id="@+id/country_code"
        android:layout_width="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingVertical="10dp"
        android:autofillHints="91"
        android:background="#979292"
        android:textColor="#ffffff"
        android:hint="Enter Country Code"
        android:gravity="center"
        android:inputType="phone"
        android:textSize="22dp"
        />

    <EditText
        android:layout_alignParentEnd="true"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginBottom="8dp"
        android:hint="Enter Phone number"
        android:background="#979292"
        android:inputType="phone"
        android:layout_above="@+id/button"
        android:textSize="22dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:background="#e9e9e9"
        android:elevation="30dp"
        android:text="Open in WhatsApp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#2B2B2B"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
